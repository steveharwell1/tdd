[Unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=steve
WorkingDirectory=/home/steve/sites/SITENAME/virtualenv/bin/gunicorn --bind unix:/tmp/SITENAME.socket superlists.wsgi:application
ExecStart=/home/steve/sites/SITENAME/virtualenv/bin/gunicorn --bind unix:/tmp/SITENAME.socket superlists.wsgi:application

[Install]
WantedBy=multi-user.target